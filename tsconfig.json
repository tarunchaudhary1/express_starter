{
  "compilerOptions": {
    "target": "ES6",              
    "module": "NodeNext",               
    "strict": true,               
    "esModuleInterop": true,      
    "skipLibCheck": true,         
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",           
    "rootDir": "./src",
    "moduleResolution": "NodeNext"        
  },
  "include": [
    "src/**/*"                    
  ]
}
